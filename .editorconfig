# filename is ``.editorconfig``
#
# quote from [the official document] [1]
#
# > When opening a file, EditorConfig plugins look for a file named
# > ``.editorconfig`` in the directory of the opened file# and in every
# > parent directory.
# > A search for ``.editorconfig`` files will stop if the root filepath
# > is reached or an EditorConfig file with "`root=true`" is found.
#
# [1]: http://editorconfig.org

root = true

# default setting for all files
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 3
tab_width = 3

# whitespaces languages
[*.yml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
